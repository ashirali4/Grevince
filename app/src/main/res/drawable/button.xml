<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0088ff" />
            <gradient android:angle="-90" android:startColor="#0088ff" android:endColor="#ffffff"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#0088ff" />
            <solid android:color="#0088ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#0088ff" />
            <gradient android:angle="-90" android:startColor="#0088ff" android:endColor="#0066ff" />
        </shape>
    </item>
</selector>