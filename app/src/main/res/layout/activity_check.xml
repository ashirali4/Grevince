<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".Activities.check">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/datemonthresponse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="MARCH "
                android:textColor="@color/colorPrimary"

                android:textSize="15sp" />

            <TextView
                android:id="@+id/dateyearday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:fontFamily="@font/poppins_bold"
                android:text="16, 2020 "
                android:textColor="@color/colorPrimary"
                android:textSize="15sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="31dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/ic_as"
            tools:ignore="VectorDrawableCompat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="FROM "


                android:textSize="15sp" />

            <TextView
                android:id="@+id/responsefrom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:layout_marginBottom="10dp"

                android:fontFamily="@font/poppins_semibold"
                android:text="System"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textVisdfew6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="STATUS "


                android:textSize="15sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="120dp"
                android:id="@+id/responsestatusidd"
                android:layout_height="40dp"
                android:layout_marginTop="-12dp"
                android:layout_marginBottom="8dp"
                android:text="Progress"
                app:cornerRadius="15dp" />

            <TextView
                android:id="@+id/lksdjfslakj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="TO "
                android:textSize="15sp"

                 />

            <TextView
                android:id="@+id/responsetoo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-11dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Chief Secretary Punjab"
                android:textSize="15sp" />


        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#83838C" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/poppins_bold"

        android:text="REMARKS "
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/responseremark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="-10dp"

        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="sans-serif"
        android:text="This is the comment about the complain sir , Hi there hellow world how are you "
        android:textColor="#5B5F61"
        android:textSize="17sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#83838C" />
</LinearLayout>